<%- include("partials/header") %>

    <div class="main">
        <section class="music">
            <% audios.forEach(function(audio) { %>
                <div class="songContainer">
                    <div class="songInfo">
                        <div class="name"><%= audio.name %></div>
                    </div>
                    <div class="songPlayer">
                        <audio class="audio" crossorigin="anonymous" src="<%= audio.source %>" type="<%= audio.type %>">
                        </audio>
                        <button class="playBtn"><i class="fas fa-play"></i></button>
                        
                        <div class="seekTime">
                            <div class="time">0:00</div>
                            <!-- <input type="range" class="seekbar" value="0"> -->
                            <div class="waveform">
                                <canvas width="400" height="80"></canvas>
                            </div>
                        </div>
                        
                        
                    </div>
                    <div class="songInfo">
                        <div class="rate">bpm: <%= audio.bpm %></div>
                    </div>
                    <hr>
                </div>
                <% }) %>
        </section>
        <section class="about">
            <h2>Welcome to Yukibeats</h2>
            <p class="description">Here is the collection of my beats that i made throughout the years. I started
                making
                beats back in 2014 using my oold iPhone 5 and the garageband app. Nowadays, im using FL studio with
                like
                a thousand of different plugins and shit is crazy.
                Make sure to check out my soundcloud and instagram
            </p>
            <button class="scroll">
                <i class="fas fa-angle-double-down"></i>
            </button>
            <br>
            <p class="contactText">
                Toggle visualizer
            </p>
            <label class="switch">
                <input class="checkbox" type="checkbox" checked>
                <span class="slider"></span>
            </label>
        </section>
    </div>



    <section class="visualizer">
        <canvas height="100"></canvas>
    </section>

    <%- include("partials/rights") %>

        </main>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/iamdustan-smoothscroll/0.4.0/smoothscroll.min.js"></script>
        <script src="/js/script.js"></script>
        <%- include("partials/footer") %>